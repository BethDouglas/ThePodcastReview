@model ThePodcastReview.Models.ReviewDetail

@{
    ViewBag.Title = "Details";
}

@*<h2>Review Details</h2>*@

    <div class="row">
        <h1>     </h1>
    </div>
    <div>
        <div class="row">
            <div class="col-md-8">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <h4><strong>@Html.DisplayFor(model => model.PodcastTitle)</strong></h4>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.Content)
                        <h5 style="text-align:right"> - Reviewer</h5>
                        <h6 style="text-align:right">@Html.DisplayNameFor(model => model.CreatedUtc) - 
                            @Html.DisplayFor(model => model.CreatedUtc)</h6>
                        <h6 style="text-align:right">@Html.DisplayNameFor(model => model.ModifiedUtc) - 
                        @Html.DisplayFor(model => model.ModifiedUtc)</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <h4><strong>@Html.DisplayNameFor(model => model.FavEpisodes)</strong></h4>
                    </div>
                    <div class="panel-body">
                        @Html.DisplayFor(model => model.FavEpisodes)
                    </div>
                </div>
            </div>
        </div>
    </div>




